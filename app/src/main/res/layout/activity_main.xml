<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="30sp">



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor:"
        android:textColor="#000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/Editvalor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="Ingrese un valor entero"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PosiciÃ³n en vector (0-9):"
        android:textColor="#000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/Editposicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese un valor entre 0 - 9"
        android:layout_marginBottom="20dp"
        android:inputType="number" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/asignar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botones_redondos"
            android:text="asignar"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/mostrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botones_redondos"
            android:text="mostrar todos"
            android:layout_marginLeft="40dp"
            android:width="150dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/Editnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        android:hint="Escriba aqui nombre de archivo" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botones_redondos"
        android:text="guardar en memoria sd"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/Editabrir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Escriba aqui nombre de archivo"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/leer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botones_redondos"
        android:text="leer desde memoria sd" />

</LinearLayout>